{
    "id": "your-app-id",  
    "version": "1.0.0",
    "modules": {
      "jira:customPage": {
        "key": "goals-page",
        "function": "resolver-handler",
        "title": "Team Goals Page",
        "layout": "basic"
      }
    },
    "permissions": {
      "scopes": [
        "read:jira-work",
        "write:jira-work",
        "storage:app"
      ]
    },
    "providers": {
      "api": {
        "jira": {
          "cloud": {}
        }
      }
    },
    "resources": {
      "function": {
        "memory": "128mb"
      }
    },
    "app": {
      "runtime": {
        "node": "18"
      }
    }
  }
  